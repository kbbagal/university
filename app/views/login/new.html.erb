<div class="container">
  <div class="row center">
    <div class="col s12 m12 l12">
      <div class="card-panel">
      <h3 class="header">Sign in</h3>
        <div class="row">
          <%= form_with(model: @student, url: login_create_path, method: :post, class: "col s12", local: true) do |f| %>
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix">email</i>
              <%= f.email_field :email, id: "email_prefix", class: "validate", placeholder: "Enter your email" %>
              <label for="icon_email"></label>
            </div>
            <div class="input-field col s6">
              <i class="material-icons prefix">enhanced_encryption</i>
              <%= f.password_field :password, id: "password_prefix", class: "validate", placeholder: "Choose your password" %>
              <label for="icon_password"></label>
            </div>
            <button class="btn waves-effect waves-light " type="submit" name="action">Sign In
              <i class="material-icons right">send</i>
            </button>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>