<div class="row">
  <div class="col s12">
    <h3 class="center-align">Students Dictionary</h3>
  </div>
</div>
<div class="row">
  <% @students.each do | student | %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= student.name %></span>
          <p>Email : <%= student.email %></p><br />
          <p>Course Enrollments :
            <% if !student.courses %>
              <p>None</p>
            <% else %>
              <ul>
                <% student.courses.each do | course| %>
                  <li><%= course.short_name %></li>
                <% end %>
              </ul>
            <% end %>
          </p>
        </div>
        <% if logged_in? %>
          <div class="card-action">
            <%= link_to "View Profile", student_path(student) %>
          </div>
        <% end %>
        <% if logged_in? && student == current_user %>
          <div class="card-action">
            <%= link_to "Edit Profile", edit_student_path(student) %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %> 
</div>