<div class="row">
  <div class="col s12">
    <h3 class="center-align">Student's Profile</h3>
  </div>
</div>
<div class="row">
  <div class="col s6 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= @student.name %></span>
        <p><%= @student.email %></p><br />
        <p>Course Enrollments :
          <% if !@student.courses %>
            <p>None</p>
          <% else %>
            <ul>
              <% @student.courses.each do | course| %>
                <li><%= course.short_name %></li>
              <% end %>
            </ul>
          <% end %>
        </p>
      </div>
    </div>
  </div>
</div>